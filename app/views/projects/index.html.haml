.create-project
  = form_for @project do |f|
    .text-field
      = f.text_field :name, placeholder: 'Name', required: true
    = f.submit 'Start', class: 'button'

%h1 History

%table.projects-list
  %tbody
    - @projects.each do |project|
      %tr
        %td
          = link_to project.name, project_path(project.id), class: 'link-as-text'
        %td
          .project-status{class: project.status}
            = project.status.titleize
